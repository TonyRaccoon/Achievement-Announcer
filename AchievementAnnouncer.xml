<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
	<Script File="AchievementAnnouncer.lua"/>
	<Frame name="AchievementAnnouncerFrame">
		<Scripts>
			<OnLoad>
				AA_OnLoad(self);
			</OnLoad>
			<OnEvent>
				AA_OnEvent(self, event, ...);
			</OnEvent>
		</Scripts>
	</Frame>
	
	<Frame name="AA_Options" hidden="false" toplevel="true" frameStrata="DIALOG">
		<Scripts>
			<OnLoad>AA_OptionsLoad(self)</OnLoad>
			<OnShow>if (AA_Settings) then AA_OptionsShow() end</OnShow>
			<OnHide>if (AA_Settings) then AA_OptionsHide() end</OnHide>
		</Scripts>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="AA_Opt_Title" text="Achievement Announcer" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset><AbsDimension x="16" y="-16"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="AA_Opt_Subtitle" text="Sends achievement earned messages to chat" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="3" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="AA_Opt_Title" relativePoint="BOTTOMLEFT">
							<Offset><AbsDimension x="0" y="-8"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="AA_Opt_CustomChannelsTitle" text="Custom channels, separated by commas" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
							<Offset><AbsDimension x="0" y="-174"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="AA_Opt_Stringtitle" text="Output String (%a is replaced with the earned achievement)" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
							<Offset><AbsDimension x="0" y="-228"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Checkbutton name="AA_OptBut_Say" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-16"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>if (AA_Settings) then self:SetChecked(AA_Settings["Say"]) end</OnShow>
					<OnLoad>_G[self:GetName().."Text"]:SetText("Send to Say")</OnLoad>
					<OnClick>AA_ButtonClick(self)</OnClick>
				</Scripts>
			</Checkbutton>
			
			<Checkbutton name="AA_OptBut_Party" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-40"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>if (AA_Settings) then self:SetChecked(AA_Settings["Party"]) end</OnShow>
					<OnLoad>_G[self:GetName().."Text"]:SetText("Send to Party")</OnLoad>
					<OnClick>
						AA_ButtonClick(self)
						if (self:GetChecked() == 1) then AA_OptBut_RandomParty:Enable() else AA_OptBut_RandomParty:Disable() end
					</OnClick>
				</Scripts>
			</Checkbutton>
			
			<Checkbutton name="AA_OptBut_RandomParty" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="16" y="-60"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						if (AA_Settings) then
							self:SetChecked(AA_Settings["RandomParty"])
							if (AA_Settings["Party"] == 0) then self:Disable() end
						end
					</OnShow>
					<OnLoad>_G[self:GetName().."Text"]:SetText("Even LFG Parties")</OnLoad>
					<OnClick>AA_ButtonClick(self)</OnClick>
					<OnDisable>_G[self:GetName().."Text"]:SetTextColor(.5,.5,.5)</OnDisable>
					<OnEnable>_G[self:GetName().."Text"]:SetTextColor(1,.82,0)</OnEnable>
				</Scripts>
			</Checkbutton>
			
			<Checkbutton name="AA_OptBut_Raid" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-88"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>if (AA_Settings) then self:SetChecked(AA_Settings["Raid"]) end</OnShow>
					<OnLoad>_G[self:GetName().."Text"]:SetText("Send to Raid")</OnLoad>
					<OnClick>
						AA_ButtonClick(self)
						if (self:GetChecked() == 1) then AA_OptBut_RandomRaid:Enable() else AA_OptBut_RandomRaid:Disable() end
					</OnClick>
				</Scripts>
			</Checkbutton>
			
			<Checkbutton name="AA_OptBut_RandomRaid" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="16" y="-108"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						if (AA_Settings) then
							self:SetChecked(AA_Settings["RandomRaid"])
							if (AA_Settings["Raid"] == 0) then self:Disable() end
						end
					</OnShow>
					<OnLoad>_G[self:GetName().."Text"]:SetText("Even LFR Raids")</OnLoad>
					<OnClick>AA_ButtonClick(self)</OnClick>
					<OnDisable>_G[self:GetName().."Text"]:SetTextColor(.5,.5,.5)</OnDisable>
					<OnEnable>_G[self:GetName().."Text"]:SetTextColor(1,.82,0)</OnEnable>
				</Scripts>
			</Checkbutton>
			
			<Checkbutton name="AA_OptBut_Guild" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-133"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>if (AA_Settings) then self:SetChecked(AA_Settings["Guild"]) end</OnShow>
					<OnLoad>_G[self:GetName().."Text"]:SetText("Announce guild achievements")</OnLoad>
					<OnClick>
						AA_ButtonClick(self)
					</OnClick>
				</Scripts>
			</Checkbutton>
			
			<EditBox name="AA_Opt_CustomChannels" autoFocus="false" inherits="InputBoxTemplate">
				<Size>
					<AbsDimension x="250" y="32"></AbsDimension>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="8" y="-184"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>if (AA_Settings) then self:SetText(AA_Settings["CustomChannels"]) end</OnShow>
					<OnEnterPressed>AA_EditBox2_Enter(self)</OnEnterPressed>
					<OnEscapePressed>AA_EditBox2_Escape(self)</OnEscapePressed>
					<OnEditFocusGained>AA_EditBox2_Focus(self)</OnEditFocusGained>
				</Scripts>
			</EditBox>
			
			<EditBox name="AA_Opt_String" autoFocus="false" inherits="InputBoxTemplate">
				<Size>
					<AbsDimension x="250" y="32"></AbsDimension>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="AA_Opt_Subtitle" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="8" y="-238"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>if (AA_Settings) then self:SetText(AA_Settings["String"]) end</OnShow>
					<OnEnterPressed>AA_EditBox_Enter(self)</OnEnterPressed>
					<OnEscapePressed>AA_EditBox_Escape(self)</OnEscapePressed>
					<OnEditFocusGained>AA_EditBox_Focus(self)</OnEditFocusGained>
				</Scripts>
			</EditBox>
			
			<Button name="AA_OptBut_DefaultString" inherits="UIPanelButtonTemplate" text="Default">
				<Size><AbsDimension x="60" y="24"/></Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="AA_Opt_String" relativePoint="RIGHT">
						<Offset><AbsDimension x="2" y="0"/></Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>PlaySound("igMainMenuOptionCheckBoxOn") AA_Opt_String:SetText("has earned the achievement %a!")</OnClick>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
 </Ui>